@model IEnumerable<CrmApp.Models.Departman>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <h5 class="card-header">Departman Listesi</h5>
    <div class="card-body">
        <p>
            <a class="btn btn-primary" asp-action="Create">Yeni Oluştur</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Departman Adı
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmanName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>