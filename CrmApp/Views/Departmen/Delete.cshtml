@model CrmApp.Models.Departman

@{
    ViewData["Title"] = "Delete";
}
<div class="card">
    <h5 class="card-header">Departman Sil</h5>
    <div class="card-body">
        <div>
            <h5 class="text-danger">Silmek istediğinize emin misiniz?</h5>

            <dl class="row my-5">
                <dt class="col-sm-2">
                    Departman Adı
                </dt>
                <dd class="col-sm-10 text-danger">
                    @Html.DisplayFor(model => model.DepartmanName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Sil" class="btn btn-danger" /> 
                <a asp-action="Listeye Geri Dön"></a>
            </form>
        </div>
    </div>
</div>
