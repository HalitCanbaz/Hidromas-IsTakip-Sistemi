@model List<WorksApprovedList>

@{
    ViewData["Title"] = "WorksAppRovedList";
}

<h1>MyPendingWorksList</h1>

<table class="table">
    <thead>
        <tr>
            <th>İşin Konu</th>
            <th>İşin Açıklama</th>
            <th>İşin Oluşturma Tarihi</th>
            <th>İşin İstenen Tarihi</th>
            <th>İşin Açan Kim</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Create</td>
                <td>@item.DeadLine</td>
                <td>@item.WhoIsCreate</td>
                <td>@item.Status</td>
                <td>
                    <form asp-action="WorksStatusApproval" asp-controller="Works" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-success">Onayla</button>
                    </form>                 
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="DetailWork" asp-route-id="@item.Id">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
