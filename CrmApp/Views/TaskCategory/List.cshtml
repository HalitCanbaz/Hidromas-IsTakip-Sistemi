@model IEnumerable<CrmApp.Models.Categories>

@{
    ViewData["Title"] = "List";
}

<div class="card">
    <h5 class="card-header">Kategori Listesi</h5>
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4">                               
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Kategori Adı
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="TaskCategory" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a class="btn btn-gray" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>
        <a asp-action="Create" class="btn btn-secondary my-4">Yeni Kategori Oluştur</a>
        </div>       
    </div>
</div>

